<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/select_item">

        <TextView
            android:id="@+id/location_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:text="@string/pref_location_label" />

        <TextView
            android:id="@+id/location_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_title"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            tools:text="@string/pref_location_default" />
    </RelativeLayout>

    <View
        android:id="@+id/v_item1"
        style="@style/DividingLine" />

    <RelativeLayout
        android:id="@+id/rl_unit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/select_item">

        <TextView
            android:id="@+id/unit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:text="@string/pref_units_label" />

        <TextView
            android:id="@+id/unit_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/unit_title"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            tools:text="@string/pref_units_metric" />
    </RelativeLayout>

    <View
        android:id="@+id/v_item2"
        style="@style/DividingLine" />

    <RelativeLayout
        android:id="@+id/rl_notification"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/select_item">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:text="@string/pref_enable_notifications_label" />

        <TextView
            android:id="@+id/notification_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notification_title"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"
            tools:text="@string/pref_enable_notifications_true" />

        <CheckBox
            android:id="@+id/cb_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <View
        android:id="@+id/v_item3"
        style="@style/DividingLine" />


</LinearLayout>